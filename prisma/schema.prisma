// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Token {
  id    Int     @id @default(autoincrement())
  burned Boolean
  minted Boolean
  originChain Int
  destinationChain Int?
  blockNumber Int?
  burnTimestamp DateTime
  burnEVMTransactionHash String?
  mintEVMTransactionHash String?
  burnStarkTransaction_id Int?
  mintStarkTransaction_id Int?
  originTokenAddress String
  destinationTokenAddress String?
  originTokenId Int  @unique
  destinationTokenId Int? @unique
  fromOriginAddress String?
  toOriginAddress String
  toDestinationAddress String?
}

model AddressMapping {
  id    Int     @id @default(autoincrement())
  originChain Int
  destinationChain Int
  originAddress String
  destinationAddress String
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}
